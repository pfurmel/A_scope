// the setup routine runs once when you press reset:
void setup() {
  // initialize serial communication at 9600 bits per second:
  Serial.begin(9600);
  // by default, we'll generate the high voltage from the 3.3v line internally! (neat!)
  display.begin(SSD1306_SWITCHCAPVCC);
  // init done

  // Show image buffer on the display hardware.
  // Since the buffer is intialized with an Adafruit splashscreen
  // internally, this will display the splashscreen.
  display.clearDisplay();
  display.drawBitmap(0, 0,  BMP_DEMO, 128, 64, 1);
  display.display();
  delay(2000);
  display.clearDisplay();
}

// the loop routine runs over and over again forever:
void loop() {
  //startpoint for line

  if (x0 > 127) {
    x0 = 0;
    startY = endY;
    display.clearDisplay();
  }


  //hardcode labels on screen:
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(0, 0);
  display.println("Voltage:");
  display.display();

  // read the input on analog pin 0:
  int sensorValue = analogRead(A0);
  int scaledValue = 64 - (sensorValue / 16); //scaling for screen resolution
  int voltage = sensorValue / 205; //voltage 0-5v
  x0 = x0 + 8;
  if (scaledValue < 16) { //top  margin to leave room for yellow part of screen
    scaledValue = 16;
  }
  // print out the value you read:
  //Serial.println(scaledValue);
  delay(10); // delay in between reads for stability

  //Print pot value on screen
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(64, 0);
  display.println(voltage);
  display.display();
  //clear screen
  display.setTextSize(1);
  display.setTextColor(BLACK);
  display.setCursor(64, 0);
  display.println(voltage);
  display.display();
  //draw line starting at 0, 32: mid screen, then go from there
  startX = x0;
  endX = startX + 8;
  endY = scaledValue;

  display.drawLine(x0, startY, endX, endY, WHITE);
  display.display();
  //calculate next line to draw using previous values as starting point
  startY = endY;


}
